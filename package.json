{
  "name": "project-blueprint",
  "displayName": "project_blueprint",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:project-blueprint.openInBlueprint",
    "onCommand:project-blueprint.generateBlueprintMarkdown",
    "onCommand:project-blueprint.helloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "project-blueprint.openInBlueprint",
        "title": "在蓝图中打开",
        "category": "Project Blueprint"
      },
      {
        "command": "project-blueprint.generateBlueprintMarkdown",
        "title": "生成项目蓝图",
        "category": "Project Blueprint"
      },
      {
        "command": "project-blueprint.helloWorld",
        "title": "Hello World"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "project-blueprint.openInBlueprint",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "project-blueprint.generateBlueprintMarkdown",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
