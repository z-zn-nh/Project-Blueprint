{
  "name": "project-blueprint",
  "displayName": "Project Blueprint",
  "description": "在 VS Code 中扫描项目目录为“蓝图”，在 Webview 里编辑（仅内存，不改真实文件），并导出 tree 风格的 Markdown 结构快照。",
  "publisher": "zining",
  "repository": {
    "type": "git",
    "url": "https://github.com/z-zn-nh/Project-Blueprint.git"
  },
  "homepage": "https://github.com/z-zn-nh/Project-Blueprint",
  "bugs": {
    "url": "https://github.com/z-zn-nh/Project-Blueprint/issues"
  },
  "license": "MIT",
  "icon": "media/account_tree_128dp_1F1F1F_FILL0_wght400_GRAD0_opsz48.png",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "blueprint",
    "project",
    "tree",
    "markdown",
    "folder",
    "directory",
    "scaffold",
    "structure"
  ],
  "activationEvents": [
    "onCommand:project-blueprint.openInBlueprint",
    "onCommand:project-blueprint.generateBlueprintMarkdown",
    "onCommand:project-blueprint.helloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "project-blueprint.openInBlueprint",
        "title": "在蓝图中打开",
        "category": "Project Blueprint"
      },
      {
        "command": "project-blueprint.generateBlueprintMarkdown",
        "title": "生成项目蓝图",
        "category": "Project Blueprint"
      },
      {
        "command": "project-blueprint.helloWorld",
        "title": "Hello World"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "project-blueprint.openInBlueprint",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "project-blueprint.generateBlueprintMarkdown",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "configuration": {
      "title": "Project Blueprint",
      "properties": {
        "project-blueprint.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show information notifications (toast messages) when running commands."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
